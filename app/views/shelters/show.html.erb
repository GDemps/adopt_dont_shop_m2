<h2><%= @shelter.name %></h2>
<%= @shelter.address %>
<%= @shelter.city %>
<%= @shelter.state %>
<%= @shelter.zip %><br>
<%= link_to "#{@shelter.name}'s Pets", "/shelters/#{@shelter.id}/pets" %>
<a href="/shelters/<%= @shelter.id %>/edit">Edit Shelter</a>
<%= button_to "Delete Shelter", "/shelters/#{@shelter.id}", method: :delete %>

<section id="statistics">
  Number of Pets: <%= @shelter.num_of_pets %>
  Average Review Rating: <%= @shelter.avg_rating %>
  Number of Applications: <%= @shelter.total_apps %>
</section>

<h2>REVIEWS</h2>
<% @shelter.reviews.each do |review| %>
<section id="review-<%=review.id%>">
  <%= review.title %><br>
  Rating: <%= review.rating %><br>
  Comment:<%= review.content %><br>
  <%= review.image %><br>
  User: <%= review.name %><br>
  <%= link_to "Edit Review", "/reviews/#{review.id}/edit" %>
  <%= link_to "Delete Review", "/reviews/#{review.id}/delete", method: :delete %>
</section>
<% end %>

<%= link_to "New Review", "/shelters/#{@shelter.id}/reviews/new"%>
