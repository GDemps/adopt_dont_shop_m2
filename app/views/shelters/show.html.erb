<h2><%= @shelter.name %></h2>
<%= @shelter.address %>
<%= @shelter.city %>
<%= @shelter.state %>
<%= @shelter.zip %><br>
<%= link_to "#{@shelter.name}'s Pets", "/shelters/#{@shelter.id}/pets" %>
<a href="/shelters/<%= @shelter.id %>/edit">Edit Shelter</a>
<%= button_to "Delete Shelter", "/shelters/#{@shelter.id}", method: :delete %>

<h2>REVIEWS</h2>
<% @reviews.each do |review| %>
  <%= review.title %><br>
  Rating: <%= review.rating %><br>
  Comment:<%= review.content %><br>
  <%= review.image %><br>
  User: <%= review.name %><br>
<% end %>

<%= link_to "New Review", "/shelters/#{@shelter.id}/reviews/new"%>
