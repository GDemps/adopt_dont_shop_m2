<%= form_tag path, method: method do %>
  <h2><%= review_header %></h2>
  <%= label_tag :title %>
  <%= text_field_tag :title, prefill_title %>
  <%= label_tag :rating %>
  <%= text_field_tag :rating, prefill_rating %>
  <%= label_tag :content %>
  <%= text_field_tag :content, prefill_content %>
  <%= label_tag :image %>
  <%= text_field_tag :image, prefill_image %>
  <%= label_tag :name %>
  <%= text_field_tag :name, prefill_name %>

  <%= submit_tag button_text %>
<% end %>
